<?xml version="1.0" encoding="UTF-8" ?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
        http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="AppBundle\Entity\ToDoList" table="toDoList">
        <id name="id" type="integer">
            <generator strategy="AUTO" />
        </id>
        <field name="name" type="string" length="100" />
        <one-to-many field="tasks" target-entity="AppBundle\Entity\Task" mapped-by="toDoListId" />
        <many-to-one field="userId" target-entity="AppBundle\Entity\User" inversed-by="toDoLists">
            <join-column name="userId" referenced-column-name="id" unique="false"/>
        </many-to-one>
    </entity>

</doctrine-mapping>